<% movies.in_groups_of(3, false).each do |movie_group| %>
  <div class='row'>
  <% movie_group.each do |movie| %>
    <div class='col-md-4' align='center'>
      <div class='text-center'>
        <strong><%= title_titleize(movie.title) %></strong>
      </div>
      <div class='movie-info'>
        <% if movie.images.present? %>
          <%= link_to(image_tag(movie.images.first.image.url(:medium)), movie) %>
        <% else %>
          <%= link_to(image_tag('poster-not-available.jpg', size: '300x300', alt: 'Movie Poster Not Available'), movie) %>
        <% end %>
      </div>
      <div class='clearfix'></div>
      <br/>
      <div align='center'>
        <%= link_to 'Show', movie, class: 'btn btn-sm btn-success' %>
        <%= link_to 'Edit', edit_movie_path(movie), class: 'btn btn-sm btn-primary' %>
        <%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
      </div>
    </div>
  <% end %>
  </div>
  <div class='margin-padded-space'></div>
<% end %>
